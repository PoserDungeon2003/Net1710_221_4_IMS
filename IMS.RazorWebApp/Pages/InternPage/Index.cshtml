@page
@model IMS.RazorWebApp.Pages.Intern.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<form method="get">
    <div class="form-group">
        <label asp-for="SearchCriteria.SearchTerm">Search:</label>
        <input type="text" class="form-control" asp-for="SearchCriteria.SearchTerm">
    </div>
    <button type="submit" class="btn btn-primary">Search</button>
</form>

@if (Model.Intern != null && Model.Intern.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>University</th>
                <th>Major</th>
                <th>JobPosition</th
                <th>WorkingTasks</th>
                <th>Name</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var intern in Model.Intern)
            {
                <tr>
                    <td>@intern.University</td>
                    <td>@intern.Major</td>
                    <td>@intern.JobPosition</td>
                    <td>@intern.WorkingTasks</td>
                    <td>@intern.Name</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No interns found matching your search criteria.</p>
}
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Intern[0].University)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Intern[0].Major)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Intern[0].JobPosition)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Intern[0].EducationBackground)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Intern[0].Experiences)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Intern[0].WorkingTasks)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Intern[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Intern[0].Company)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Intern[0].Mentor)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Intern) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.University)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Major)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.JobPosition)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EducationBackground)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Experiences)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.WorkingTasks)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Company.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Mentor.Email)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.InternId">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.InternId">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.InternId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
