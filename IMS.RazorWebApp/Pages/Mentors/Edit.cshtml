            </div>
            <div class="form-group">
                <label asp-for="Mentor.CompanyId" class="control-label"></label>
                <select asp-for="Mentor.CompanyId" class="form-control" asp-items="ViewBag.CompanyId"></select>
                <span asp-validation-for="Mentor.CompanyId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
