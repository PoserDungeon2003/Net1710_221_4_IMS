            </div>
            <div class="form-group">
                <label asp-for="Mentor.Phone" class="control-label"></label>
                <input asp-for="Mentor.Phone" type="tel" class="form-control" />
                <span asp-validation-for="Mentor.Phone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Mentor.Email" class="control-label"></label>
                <input asp-for="Mentor.Email" type="email" class="form-control" />
                <span asp-validation-for="Mentor.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Mentor.JobPosition" class="control-label"></label>
                <input asp-for="Mentor.JobPosition" class="form-control" />
                <span asp-validation-for="Mentor.JobPosition" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Mentor.Department" class="control-label"></label>
                <input asp-for="Mentor.Department" class="form-control" />
                <span asp-validation-for="Mentor.Department" class="text-danger"></span>
            </div>
